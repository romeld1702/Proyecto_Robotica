<?xml version="1.0"?>

<robot name="gen3_on_rail" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:arg name="use_gazebo" default="false"/>

  <!-- Include the Gen3 robot -->
  <xacro:include filename="$(find kortex_description)/arms/gen3/6dof/urdf/gen3.urdf.xacro"/>
  <!-- Dummy link to satisfy PyKDL -->
  <link name="base_fixed"/>
  <joint name="fixed_base_joint" type="fixed">
    <parent link="base_fixed"/>
    <child link="rail_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Base rail link -->
  <link name="rail_link">
    <visual>
      <geometry>
        <box size="2 0.1 0.1"/> <!-- Rail of length 2 meters -->
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="2 0.1 0.1"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="5"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1" iyy="1" izz="1" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- Prismatic joint to move Gen3 along rail -->
  <joint name="prismatic_joint_rail" type="prismatic">
    <parent link="rail_link"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/> <!-- Initial offset -->
    <axis xyz="1 0 0"/>
    <limit lower="-1" upper="1" effort="100" velocity="0.5"/> <!-- 1 meter of travel -->
  </joint>
  
  <!-- Solo en simulaciÃ³n -->
  <xacro:if value="$(arg use_gazebo)">
    <xacro:include filename="$(find kortex_description)/arms/gen3/6dof/urdf/gen3_on_rail_gazebo.xacro"/>
  </xacro:if>
</robot>

